{
	"name": "nextjs-evergreen-template",
	"version": "0.1.0",
	"private": true,
	"author": "nikita.naumov@chulakov.ru",
	"license": "ISC",
	"packageManager": "pnpm@7.21.0",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"format": "prettier --write .",
		"stylelint": "stylelint \"**/*.scss\" --fix",
		"lint": "next lint",
		"type-check": "tsc --noEmit --skipLibCheck",
		"preinstall": "node ./scripts/preinstall.js",
		"postinstall": "simple-git-hooks",
		"nc": "generate-react component",
		"analyze": "cross-env ANALYZE=true next build",
		"clean": "rimraf .next",
		"pushall": "git push gh && git push ch"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged",
		"commit-msg": "node scripts/verifyCommit.mjs",
		"pre-push": " pnpm type-check"
	},
	"lint-staged": {
		"*.scss": "stylelint --fix",
		"*.{js,json, yml}": "prettier --list-different --write",
		"*.ts?(x)": [
			"eslint",
			"prettier --list-different --parser=typescript --write"
		]
	},
	"browserslist": {
		"development": [
			"last 2 chrome versions",
			"last 2 firefox versions",
			"last 2 edge versions"
		],
		"production": [
			">1%",
			"last 4 versions",
			"Firefox ESR",
			"not ie < 11"
		]
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=7.2"
	},
	"dependencies": {
		"@next/bundle-analyzer": "^13.1.6",
		"@next/font": "^13.1.1",
		"@radix-ui/react-tooltip": "^1.0.2",
		"@reach/auto-id": "^0.18.0",
		"@types/node": "^18.11.18",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.10",
		"axios": "^1.2.2",
		"classnames": "^2.3.2",
		"cross-env": "^7.0.3",
		"html-react-parser": "^3.0.7",
		"i18next": "^22.4.9",
		"next": "^13.1.1",
		"next-i18next": "^13.1.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-i18next": "^12.1.5"
	},
	"devDependencies": {
		"@ecomfe/class-names-loader": "^2.0.0",
		"@next/eslint-plugin-next": "^13.1.1",
		"@radix-ui/react-dropdown-menu": "^2.0.1",
		"@svgr/webpack": "^6.5.1",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.47.1",
		"chalk": "^5.2.0",
		"eslint": "^8.31.0",
		"eslint-config-next": "13.1.1",
		"eslint-config-prettier": "^8.6.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-config-xo-typescript": "^0.55.1",
		"generate-react-cli": "^8.2.0",
		"lint-staged": "^13.1.0",
		"postcss": "^8.4.20",
		"postcss-scss": "^4.0.6",
		"prettier": "^2.8.1",
		"rimraf": "^4.1.2",
		"sass": "^1.57.1",
		"simple-git-hooks": "^2.8.1",
		"stylelint": "^14.16.1",
		"stylelint-config-prettier-scss": "^0.0.1",
		"stylelint-config-sass-guidelines": "^9.0.1",
		"typescript": "^4.9.4"
	},
	"pnpm": {
		"overrides": {
			"json5@<2.2.2": ">=2.2.2"
		},
		"peerDependencyRules": {
			"ignoreMissing": [
				"babel-loader",
				"webpack"
			]
		}
	}
}
